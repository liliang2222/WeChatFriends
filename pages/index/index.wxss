/**index.wxss**/
page{
  background-color:#F8F8F8;
  display: block;
}
.content{
  position: absolute;
  width: 100%;
}
.describe {
  padding: 10px;
  background-color: white;
  width: 100%;
  box-sizing: border-box;
}
.describe textarea{
  width: 100%;
  font-size: 16px;
  min-height: 100px;
  line-height: 1.6em;
}
.img_layout{
  width: 100%;
  float: left;
  box-sizing: border-box;
  background-color: white;
}
.img{
  width: 33.3333%;
  float: left;
  box-sizing: border-box;
  padding: 10px;
}
.img_icon{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.img image{
  height: 100px;
  width: 100px;
}
text{
  float: right;
  padding: 4px 12px;
  margin: 10px;
  background-color: #17abe3;
  border-style: solid;
  border-radius: 5px;
  font-size: 16px;
  color: white;
}

