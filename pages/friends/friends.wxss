/* pages/friends/friends.wxss */
.slide-image{
  width: 100%;
  height: 150px;
}
.friends_content{
 width: 100%;
 box-sizing: border-box;
}
.friends_item{
    padding: 10px 4px;
    width: 100%;
    box-sizing: border-box;
}
.clear{
  clear: both;
}
.user_head{
  float: left;
  width: 15%;
}
.text_content{
  float: left;
  position: relative;
  width: 85%;
}
.nickname text{
  color: #0061b0;
  font-weight: bold;
  font-size: 16px;
}
.user_head_icon{
  width: 40px;
  height: 40px;
  border-radius: 50%;
}
.friends_text{
  font-size: 15px;
  line-height: 1.6em;
}
.img_clear{
  clear: both;
}
.img_content{
  box-sizing: border-box;
}
.img_content .img{
  padding: 4px;
  float: left;
  width: 33.333%;
  box-sizing: border-box;
}
.img_icon image{
  width: 90px;
  height: 90px;
}
.publish_time{
  font-size: 12px;
}